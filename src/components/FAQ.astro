---
import { faqContent } from '../content/faq';
---

<section id="faq" class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-gray-900">{faqContent.title}</h2>
      <p class="mt-4 text-lg text-gray-600">{faqContent.subtitle}</p>
    </div>

    <div class="mt-16 max-w-3xl mx-auto">
      <dl class="space-y-8">
        {faqContent.faqs.map(faq => (
          <div class="bg-white rounded-lg p-6 shadow-sm">
            <dt class="text-lg font-semibold text-gray-900">{faq.question}</dt>
            <dd class="mt-2 text-gray-600">{faq.answer}</dd>
          </div>
        ))}
      </dl>
    </div>
  </div>
</section>