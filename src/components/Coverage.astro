---
const areas = [
  "Barcelona ciudad",
  "Área metropolitana de Barcelona",
  "Vallès Occidental",
  "Vallès Oriental",
  "Baix Llobregat",
  "Maresme",
  "Garraf"
];
---

<section id="cobertura" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-gray-900">Área de cobertura</h2>
      <p class="mt-4 text-lg text-gray-600">Servicio disponible en Barcelona y comarcas cercanas</p>
    </div>

    <div class="mt-16">
      <div class="bg-gray-50 rounded-lg p-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {areas.map(area => (
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5 text-indigo-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-700">{area}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>