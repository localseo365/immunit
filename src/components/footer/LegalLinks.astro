---
const legalLinks = [
  { text: "Aviso Legal", href: "/legal" },
  { text: "Política de Privacidad", href: "/privacidad" },
  { text: "Política de Cookies", href: "/cookies" },
  { text: "Términos y Condiciones", href: "/terminos" }
];
---

<div class="space-y-4">
  <h3 class="text-sm font-semibold text-gray-400 uppercase tracking-wider">Legal</h3>
  <ul class="space-y-2">
    {legalLinks.map(link => (
      <li>
        <a href={link.href} class="text-gray-500 hover:text-gray-400 transition-colors">
          {link.text}
        </a>
      </li>
    ))}
  </ul>
</div>