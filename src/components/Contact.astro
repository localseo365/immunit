---
import { contactContent } from '../content/contact';
---

<section id="contacto" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-gray-900">{contactContent.title}</h2>
      <p class="mt-4 text-lg text-gray-600">{contactContent.subtitle}</p>
    </div>

    <div class="mt-16 grid grid-cols-1 md:grid-cols-2 gap-8">
      <div class="bg-gray-50 p-8 rounded-lg">
        <h3 class="text-xl font-semibold text-gray-900 mb-4">{contactContent.emergency.title}</h3>
        <div class="space-y-4">
          <p class="text-gray-600">{contactContent.emergency.description}</p>
          <a 
            href="https://wa.link/fjjusu"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center text-gray-600 hover:text-indigo-600 transition-colors"
          >
